<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- namespace="매퍼 인터페이스 경로" --> 
<mapper namespace="com.board.community.mapper.CommentMapper">

    <!-- 목록 -->
    <select id="list" resultType="Comments">
        SELECT *
        FROM comments
    </select>

    <!-- 조회 -->
    <select id="select" resultType="Comments">
        SELECT *
        FROM comments
        WHERE id = #{id}
    </select>

    <!-- 등록 -->
    <insert id="insert">
        INSERT INTO comments( id, board_no, writer, content )
        VALUES( #{id}, #{boardNo}, #{writer}, #{content} )
    </insert>

    <!-- 수정 -->
    <update id="update">
        UPDATE comments
            SET writer = #{writer}
                ,content = #{content}
        WHERE id = #{id}
    </update>

    <!-- 삭제 -->
    <delete id="delete">
        DELETE FROM comments
        WHERE id = #{id}
    </delete>

    <!-- 게시글 기준 목록 -->
    <select id="listByParent" resultType="Comments">
        SELECT *
        FROM comments
        WHERE board_no = #{boardNo}
    </select>

    <!-- 게시글 기준 삭제 -->
    <delete id="deleteByParent">
        DELETE FROM comments
        WHERE board_no = #{boardNo}
    </delete>

</mapper>